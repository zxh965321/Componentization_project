<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/baseLayout"
    style="@style/MM">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_74"
        android:padding="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetEnd="0dp"
        app:maxButtonHeight="20dp"
        app:titleMargin="0dp">

        <RelativeLayout
            android:id="@+id/titleLayout"
            style="@style/MM"
            android:paddingTop="@dimen/dp_26">

            <ImageView
                android:id="@+id/baseBack"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48"
                android:src="@mipmap/ic_back"
                android:layout_alignParentBottom="true"
                android:padding="@dimen/dp_14"
                android:visibility="invisible"
                android:layout_alignParentLeft="true" />

            <FrameLayout
                android:id="@+id/baseFunction"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true">

                <ImageView
                    android:id="@+id/baseFunctionIv"
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="@dimen/dp_48"
                    android:padding="@dimen/dp_14"
                    android:visibility="invisible"
                    android:src="@mipmap/bga_pp_ic_plus" />

                <TextView
                    android:id="@+id/baseFunctionTv"
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="@dimen/dp_48"
                    android:gravity="center"
                    android:textSize="@dimen/sp_12"
                    android:visibility="invisible"
                    android:textColor="@color/color_functionTv" />
            </FrameLayout>

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:lines="1"
                android:maxLines="1"
                android:gravity="center"
                android:maxLength="10"
                android:ellipsize="end"
                android:text="sdsdsdfsfsdfdsfsdf"
                android:textStyle="bold"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/color_titleTv"
                android:layout_toRightOf="@id/baseBack"
                android:layout_toLeftOf="@id/baseFunction"
                android:layout_alignParentBottom="true" />

        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>


    <ViewStub
        android:id="@+id/baseContent"
        style="@style/MM"
        android:layout_below="@id/toolbar"
        android:background="@color/color_theme"/>

    <ViewStub
        android:id="@+id/baseEmpty"
        style="@style/MM"
        android:layout="@layout/layout_empty"
        android:layout_below="@id/toolbar"
        android:visibility="gone"/>

</RelativeLayout>